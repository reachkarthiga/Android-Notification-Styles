<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/messageStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND Message Notification"
        app:layout_constraintBottom_toTopOf="@+id/bigPictureStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/bigPictureStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND Big Picture Notification"
        app:layout_constraintBottom_toTopOf="@+id/inboxStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageStyle" />

    <Button
        android:id="@+id/inboxStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND Inbox Notification"
        app:layout_constraintBottom_toTopOf="@+id/mediaStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigPictureStyle" />

    <Button
        android:id="@+id/mediaStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND Media Notification"
        app:layout_constraintBottom_toTopOf="@+id/progressStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inboxStyle" />

    <Button
        android:id="@+id/progressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND Progress Notification"
        app:layout_constraintBottom_toTopOf="@+id/customViewStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mediaStyle" />

    <Button
        android:id="@+id/customViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom View Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressStyle" />


</androidx.constraintlayout.widget.ConstraintLayout>